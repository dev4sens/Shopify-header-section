    </div>

    <!-- Payment Icons & Copyright -->
    <div class="footer__bottom">
      {% if section.settings.show_payment_icons %}
      <div class="footer__payment-icons">
        {% if section.settings.show_visa %}<img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/0169695890db3db16bfe.svg" alt="Visa" width="38" height="24">{% endif %}
        {% if section.settings.show_mastercard %}<img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/37fc65d0a31ccbd0bc29.svg" alt="Mastercard" width="38" height="24">{% endif %}
        {% if section.settings.show_amex %}<img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/3eaba8ba7e8c56001d2e.svg" alt="American Express" width="38" height="24">{% endif %}
        {% if section.settings.show_paypal %}<img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/f11b90c2972f4e93131b.svg" alt="PayPal" width="38" height="24">{% endif %}
        {% if section.settings.show_discover %}<img src="https://cdn.shopify.com/shopifycloud/checkout-web/assets/0169695890db3db16bfe.svg" alt="Discover" width="38" height="24">{% endif %}
      </div>
      {% endif %}
      <p class="footer__copyright">{{ section.settings.copyright_text }}</p>
      {% if section.settings.show_badges %}
      <div class="footer__badges">
        <img src="https://cdn.shopify.com/s/files/1/0506/3127/5301/files/shopify-secure-badge-light.svg" alt="Shopify secure" height="24">
      </div>
      {% endif %}
    </div>
  </div>
</footer>

<style>
.footer{background-color:{{section.settings.background_color}};color:{{section.settings.text_color}};padding:60px 20px 30px}
.footer__container{max-width:1400px;margin:0 auto}
.footer__content{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:40px;margin-bottom:50px}
.footer__column--newsletter{grid-column:span 1}
.footer__heading{font-size:14px;font-weight:600;letter-spacing:1px;margin-bottom:20px;color:{{section.settings.heading_color}}}
.footer__list{list-style:none;padding:0;margin:0}
.footer__list li{margin-bottom:12px}
.footer__list a{color:{{section.settings.link_color}};text-decoration:none;font-size:14px;transition:color .3s}
.footer__list a:hover{color:{{section.settings.link_hover_color}}}
.footer__newsletter-text{font-size:13px;line-height:1.6;color:{{section.settings.text_color}};margin-bottom:20px}
.footer__newsletter-form{margin-bottom:30px}
.footer__newsletter-input-wrapper{display:flex;gap:0;background-color:{{section.settings.input_background}};border-radius:2px;overflow:hidden}
.footer__newsletter-input{flex:1;padding:12px 16px;border:none;outline:none;font-size:14px;background-color:{{section.settings.input_background}};color:{{section.settings.input_text_color}}}
.footer__newsletter-input::placeholder{color:{{section.settings.input_placeholder_color}}}
.footer__newsletter-button{background-color:{{section.settings.button_background}};color:{{section.settings.button_text_color}};border:none;padding:12px 20px;cursor:pointer;transition:background-color .3s;display:flex;align-items:center;justify-content:center}
.footer__newsletter-button:hover{background-color:{{section.settings.button_hover_background}}}
.footer__newsletter-success{color:#4caf50;font-size:14px;margin-top:10px}
.footer__social{display:flex;flex-direction:column;gap:15px}
.footer__social-handle{font-size:14px;color:{{section.settings.text_color}}}
.footer__social-icons{display:flex;gap:15px;flex-wrap:wrap}
.footer__social-icons a{color:{{section.settings.social_icon_color}};transition:opacity .3s;display:flex;align-items:center}
.footer__social-icons a:hover{opacity:.7}
.footer__bottom{display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:20px;padding-top:30px;border-top:1px solid rgba(255,255,255,.2)}
.footer__payment-icons{display:flex;gap:10px;align-items:center;flex-wrap:wrap}
.footer__payment-icons img{height:24px;width:auto;opacity:.8}
.footer__copyright{font-size:13px;color:{{section.settings.text_color}};margin:0}
.footer__badges{display:flex;gap:10px;align-items:center}
.footer__badges img{height:24px;width:auto}
@media(max-width:1024px){.footer__content{grid-template-columns:repeat(2,1fr)}.footer__column--newsletter{grid-column:span 2}}
@media(max-width:640px){.footer{padding:40px 15px 20px}.footer__content{grid-template-columns:1fr;gap:30px}.footer__column--newsletter{grid-column:span 1}.footer__bottom{flex-direction:column;text-align:center;gap:15px}.footer__payment-icons,.footer__badges{justify-content:center}}
</style>

