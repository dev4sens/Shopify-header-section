<!-- sections/footer.liquid -->
<footer class="footer">
  <div class="footer__container">
    <div class="footer__content">
      <!-- Shop Column -->
      {% if section.settings.show_shop_column %}
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.shop_heading }}</h3>
        <ul class="footer__list">
          {% for block in section.blocks %}
            {% if block.type == 'shop_link' %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <!-- Company Column -->
      {% if section.settings.show_company_column %}
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.company_heading }}</h3>
        <ul class="footer__list">
          {% for block in section.blocks %}
            {% if block.type == 'company_link' %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <!-- Help Column -->
      {% if section.settings.show_help_column %}
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.help_heading }}</h3>
        <ul class="footer__list">
          {% for block in section.blocks %}
            {% if block.type == 'help_link' %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <!-- Custom Column -->
      {% if section.settings.show_custom_column %}
      <div class="footer__column">
        <h3 class="footer__heading">{{ section.settings.custom_heading }}</h3>
        <ul class="footer__list">
          {% for block in section.blocks %}
            {% if block.type == 'custom_link' %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <!-- Newsletter Column -->
      {% if section.settings.show_newsletter %}
      <div class="footer__column footer__column--newsletter">
        <h3 class="footer__heading">{{ section.settings.newsletter_heading }}</h3>
        <p class="footer__newsletter-text">{{ section.settings.newsletter_text }}</p>
        
        {% form 'customer', class: 'footer__newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          {% if form.posted_successfully? %}
            <p class="footer__newsletter-success">{{ section.settings.success_message }}</p>
          {% endif %}
          
          <div class="footer__newsletter-input-wrapper">
            <input type="email" name="contact[email]" placeholder="{{ section.settings.email_placeholder }}" class="footer__newsletter-input" required>
            <button type="submit" class="footer__newsletter-button" aria-label="Subscribe">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </div>
        {% endform %}

        <!-- Social Media -->
        {% if section.settings.show_social %}
        <div class="footer__social">
          {% if section.settings.social_handle != blank %}
            <span class="footer__social-handle">{{ section.settings.social_handle }}</span>
          {% endif %}
          <div class="footer__social-icons">
            {% if section.settings.social_instagram != blank %}
